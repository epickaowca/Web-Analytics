generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  name      String     @unique
  href      String
  hrefLabel String
  analytics Activity[]
  events    Event[]
}

model Activity {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectName], references: [name])
  projectName String
  country     String
  OS          String
  browser     String
}

model Event {
  id          String       @id @default(uuid())
  project     Project      @relation(fields: [projectName], references: [name])
  projectName String
  name        String       @unique
  labels      EventLabel[]
}

model EventLabel {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  event     Event    @relation(fields: [eventName], references: [name])
  eventName String
  name      String
}
