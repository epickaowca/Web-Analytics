generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  name      String     @unique
  href      String
  hrefLabel String
  analytics Analytic[]
  // events    Event[]
}

model Analytic {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  country   String
  OS        String
  browser   String
}

